<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="py.fpuna.tesis.qoetest.fragment.InfoFragment">

    <TextView
        android:id="@+id/device_info_label"
        android:layout_width="match_parent"
        style="@style/HeaderTextView"
        android:text="@string/device_info_title" />

    <TextView
        android:id="@+id/device_info_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/device_info_label"/>

    <View
        android:id="@+id/separator_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="@dimen/margin_top_btn"
        android:layout_below="@id/device_info_text"/>

    <TextView
        android:id="@+id/operator_info_label"
        android:layout_width="match_parent"
        style="@style/HeaderTextView"
        android:text="@string/network_info_title"
        android:layout_below="@id/separator_list"/>

    <TextView
        android:id="@+id/operator_info_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/operator_info_label" />

</RelativeLayout>
