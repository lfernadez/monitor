<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="py.fpuna.tesis.qoetest" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.PrincipalActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Content Provider -->
        <provider
            android:name=".database.Provider"
            android:authorities="py.fpuna.tesis.qoetest.provider"
            android:exported="false" >
        </provider>

        <!-- Servicio para el guardado de datos -->
        <service
            android:name=".services.GuardarDatosService"
            android:exported="false" >
        </service>

        <!-- Servicio de monitoreo de red y telefono -->
        <service
            android:name=".services.MonitoringService"
            android:exported="false" >
        </service>

        <activity
            android:name=".activity.PreTestActivty"
            android:label="@string/title_activity_pre_test_activty"
            android:parentActivityName=".activity.PrincipalActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="py.fpuna.tesis.qoetest.activity.PrincipalActivity" />
        </activity>
        <activity
            android:name=".activity.WebTestIntroActivity"
            android:label="@string/title_activity_web_test_into"
            android:parentActivityName=".activity.PreTestActivty"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="py.fpuna.tesis.qoetest.activity.PreTestActivty" />
        </activity>
        <activity
            android:name=".activity.WebTestUnoActivity"
            android:label="@string/title_activity_web_test"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.WebTestDosActivity"
            android:label="@string/title_activity_web_test_dos"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.QoEWebTestActivity"
            android:label="@string/title_activity_qo_eweb_test"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.StreamingTestIntroActivity"
            android:label="@string/title_activity_streaming_test_intro" >
        </activity>
        <activity
            android:name=".activity.StreamingTestActivity"
            android:label="@string/title_activity_streaming_test" >
        </activity>
        <activity
            android:name=".activity.QoEStreamingTestActivity"
            android:label="@string/title_activity_qo_estreaming_test" >
        </activity>
        <activity
            android:name=".activity.MusicStreamingTestIntro"
            android:label="@string/title_activity_music_straming_test_intro" >
        </activity>

        <receiver
            android:name=".receiver.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>
